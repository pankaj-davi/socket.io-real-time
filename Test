// Regex to validate passport numbers for many countries
const passportRegex = /^(?!.*[^A-Za-z0-9])(?=.{6,14}$)([A-Z]{1}[0-9]{7}|[0-9]{9}|[A-Z]{1}[0-9]{6}|[A-Z]{2}[0-9]{6}|[A-Z]{3}[0-9]{5}|[0-9]{8}|[A-Z]{1}[0-9]{8})$/i;

function validatePassport(passportNumber) {
    return passportRegex.test(passportNumber);
}

// Test examples
console.log(validatePassport("A1234567"));       // true (India)
console.log(validatePassport("123456789"));      // true (USA)
console.log(validatePassport("C012345678"));     // true (Germany)
console.log(validatePassport("N1234567"));       // true (Australia)
console.log(validatePassport("AB123456"));       // true (Canada)
console.log(validatePassport("A123456"));        // false (too short)
console.log(validatePassport("12345678A"));      // true (USA variation)
console.log(validatePassport("ABCDE123"));        // false (not valid format)
console.log(validatePassport("C12345678"));      // false (too long)
console.log(validatePassport("A123456789"));     // false (too long)
