const customValidations = [
  {
    regex: /(?:CVV|CVC|CVV2|Security Code)\s*(\d{3,4})/i,  // Case-insensitive CVV detection
    message: 'CVV detected.'
  },
  {
    regex: /(?:credit card number|cc number|credit card #)\s*(\d{16}|\d{4}-\d{4}-\d{4}-\d{4})/i,  // Case-insensitive credit card detection
    message: 'Credit card number detected.'
  },
  {
    regex: /SSO\s*(\d{9})/i,  // Case-insensitive SSO detection
    message: 'SSO detected.'
  },
  {
    regex: /(Patient ID)\s*([A-Z]{2}\d{3}\/\d{3}\.\d{2})/i,  // Case-insensitive Patient ID detection
    message: 'Patient ID detected.'
  },
  {
    regex: /(Birth date|DOB|Date of Birth)\s*(\d{1,2}[\/-]\d{1,2}[\/-]\d{2,4})/i,  // Case-insensitive DOB detection
    message: 'DOB detected.'
  },
  {
    regex: /(address|zip code)\s*(\d{5}(?:-\d{4})?)/i,  // Case-insensitive address detection
    message: 'Address detected.'
  },
  {
    regex: /(Passport Number|Passport #)\s*(\w+)/i,  // Case-insensitive passport number detection
    message: 'Passport number detected.'
  },
  {
    regex: /\b(\d{9}|\d{19})\b/i,  // 9- or 19-digit account number detection (not case-sensitive as itâ€™s numeric)
    message: 'Account number detected (9 or 19 digits).'
  },
  {
    regex: /(?:SSN|Social Security Number)\s*(\d{3}-\d{2}-\d{4})/i,  // Case-insensitive SSN detection
    message: 'SSN detected.'
  }
];
